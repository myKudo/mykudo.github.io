source "https://rubygems.org"

# Specify Jekyll version explicitly for consistency
gem 'jekyll', '~> 4.3.3'

# Windows-specific dependency
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
  gem 'jekyll-archives'
  gem 'kramdown'
  gem 'rouge'
  gem 'minima'
  gem 'jekyll-paginate-v2'
  gem 'sass-embedded'
  gem 'jekyll-sass-converter'
end

# Explicitly include rake with a compatible version
gem 'rake', '~> 13.0'
